{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "${configDir}/dist",
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "stripInternal": true,
    "importHelpers": true,
    "newLine": "lf",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.*", "**/*.spec.*", "**/__tests__/*", "node_modules", "dist"]
}
